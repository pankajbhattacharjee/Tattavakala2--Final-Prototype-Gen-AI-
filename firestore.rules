
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /artisans/{artisanId} {
      // Allow profile creation for any authenticated user, if the document does not exist
      allow create: if request.auth != null && request.auth.uid == artisanId;
      
      // Allow profile reads for anyone
      allow read: if true;
      
      // Allow profile updates only by the owner
      allow update: if request.auth != null && request.auth.uid == artisanId;
      
      // Prevent profile deletion
      allow delete: if false;

      // Rules for the 'products' subcollection within each artisan's document
      match /products/{productId} {
        // Any authenticated user can create a product under their own artisan document
        allow create: if request.auth != null && request.auth.uid == artisanId;
        
        // Anyone can read any product
        allow read: if true;
        
        // Only the artisan who owns the product can update or delete it
        allow update, delete: if request.auth != null && request.auth.uid == artisanId;
      }
    }
  }
}
