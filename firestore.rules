
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for the artisans' profile documents
    match /artisans/{artisanId} {
      // Allow a user to read and write (create, update) their own artisan profile.
      allow read, write: if request.auth != null && request.auth.uid == artisanId;
      // Explicitly prevent artisan profiles from being deleted.
      allow delete: if false;

      // Rule for the 'products' subcollection within an artisan's document
      match /products/{productId} {
        // Allow read for anyone.
        allow read: if true;
        // Allow create, update, and delete only by the product's owner (artisan).
        // On create, check the incoming document's artisanId.
        allow create: if request.auth != null && request.resource.data.artisanId == request.auth.uid;
        // On update/delete, check the existing document's artisanId.
        allow update, delete: if request.auth != null && resource.data.artisanId == request.auth.uid;
      }
    }

    // Rule for the root /products collection.
    match /products/{productId} {
      // Allow read for everyone for the public marketplace.
      allow read: if true;
      // Allow create, update, and delete only by the product's owner.
      // On create, check the incoming document's artisanId.
      allow create: if request.auth != null && request.resource.data.artisanId == request.auth.uid;
      // On update/delete, check the existing document's artisanId.
      allow update, delete: if request.auth != null && resource.data.artisanId == request.auth.uid;
    }
  }
}
