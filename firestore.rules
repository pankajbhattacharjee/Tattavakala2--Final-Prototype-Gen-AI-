
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for individual artisan documents and their subcollections
    match /artisans/{artisanId} {
      // Allow an authenticated user to create, read and update their own profile document.
      allow write: if request.auth != null && request.auth.uid == artisanId;
      allow read: if true;
      allow delete: if false; // Prevent profile deletion

      // Rules for the 'products' subcollection within each artisan's document
      match /products/{productId} {
        // Allow create if the new product's artisanId matches the user's UID.
        allow create: if request.auth != null && request.resource.data.artisanId == request.auth.uid;
        // Allow update/delete if the user is the owner of the existing product.
        allow update, delete: if request.auth != null && resource.data.artisanId == request.auth.uid;
        // Allow anyone to read any individual product document.
        allow read: if true;
      }
    }

    // Rule for the 'products' collection group
    // This allows collection group queries for the marketplace and stories pages.
    match /products/{productId} {
      allow read: if true;
    }
  }
}
