
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for individual artisan documents and their subcollections
    match /artisans/{artisanId} {
      // Allow profile creation and updates for any authenticated user, but only for their own ID
      allow create, update: if request.auth != null && request.auth.uid == artisanId;
      
      // Allow profile reads for anyone
      allow read: if true;
      
      // Prevent profile deletion
      allow delete: if false;

      // Rules for the 'products' subcollection within each artisan's document
      match /products/{productId} {
        // Only the artisan who owns this subcollection can create, update, or delete products within it
        allow create, update, delete: if request.auth != null && request.auth.uid == artisanId;
        
        // Anyone can read any individual product document if they have the full path
        allow read: if true;
      }
    }

    // Rule for the 'products' collection group
    // This allows collection group queries, which are used by the marketplace and stories pages
    // to fetch all products from all artisans at once.
    match /products/{productId} {
      allow read: if true;
    }
  }
}
