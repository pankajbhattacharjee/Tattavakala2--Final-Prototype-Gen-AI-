
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for the artisans collection
    match /artisans/{artisanId} {
      // Allow anyone to read artisan profiles
      allow read: if true;
      // Allow only the authenticated owner to write to their artisan profile
      allow write: if request.auth != null && request.auth.uid == artisanId;
    }
    
    // Rule for the products subcollection group
    match /{path=**}/products/{productId} {
        // Allow anyone to read any product
        allow read: if true;
        // Allow writes only if the user is authenticated and their UID matches the artisanId in the path
        allow write: if request.auth != null && request.auth.uid == path.split('/')[1];
    }
  }
}
