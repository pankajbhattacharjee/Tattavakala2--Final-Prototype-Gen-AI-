
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for individual artisan documents and their product subcollections
    match /artisans/{artisanId} {
      // Allow profile creation for any authenticated user, if the document does not exist
      allow create: if request.auth != null && request.auth.uid == artisanId;
      
      // Allow profile reads for anyone
      allow read: if true;
      
      // Allow profile updates only by the owner
      allow update: if request.auth != null && request.auth.uid == artisanId;
      
      // Prevent profile deletion
      allow delete: if false;

      // Rules for the 'products' subcollection within each artisan's document
      match /products/{productId} {
        // Only the artisan who owns the product can create, update, or delete it
        allow write: if request.auth != null && request.auth.uid == artisanId;
        
        // Anyone can read any individual product document if they have the full path
        allow read: if true;
      }
    }

    // Rule for the 'products' collection group
    // This allows collection group queries, which are used by the marketplace and stories pages
    // to fetch all products from all artisans at once.
    match /products/{productId} {
      allow read: if true;
    }
  }
}
