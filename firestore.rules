
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /artisans/{artisanId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == artisanId;

      match /products/{productId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == artisanId;
      }
    }
  }
}
