rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to a path scoped by their UID.
    // This allows uploads for any file within their user-specific folder.
    match /products/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

    